<h1>Books</h1>
<% @books.each do |book| %>

 <p>Title</p>
  <span>
    <%#= link_to books.title, books_path(books.id) %>
    <%= book.title %>
  </span>
  
  <p>Body</p>
    <span>
    <%#= link_to books.title, books_path(books.id) %>
    <%= book.body %>
    </span>
   

<% end %>



<%= form_with model: Book.new do |f| %>
  <h2>New book</h2>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book ' %>
<% end %>